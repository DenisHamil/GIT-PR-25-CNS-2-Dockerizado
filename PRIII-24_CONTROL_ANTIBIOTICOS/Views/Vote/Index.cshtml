@model IEnumerable<PRIII_24_CONTROL_ANTIBIOTICOS.Models.AdministrationRequest>

<h2>Solicitudes Pendientes</h2>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Solicitudes</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Paciente</th>
                        <th>Doctor Asignado</th>
                        <th>Status</th>
                        <th>Atención</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>
                                @request.IdMedicalHistoryNavigation.IdPatientNavigation.IdPersonNavigation.Name
                                @request.IdMedicalHistoryNavigation.IdPatientNavigation.IdPersonNavigation.LastName
                            </td>
                            <td>
                                @request.IdUserNavigation.IdPersonNavigation.Name
                                @request.IdUserNavigation.IdPersonNavigation.LastName
                            </td>
                            <td>@request.Status</td>
                            <td>
                                @if (request.Priority == "Emergencia")
                                {
                                    <button class="btn btn-danger w-100" disabled>Emergencia</button>
                                }
                                else if (request.Priority == "Urgente")
                                {
                                    <button class="btn btn-warning w-100" disabled>Urgente</button>
                                }
                                else
                                {
                                    <button class="btn btn-success w-100" disabled>Regular</button>
                                }
                            </td>

                            <td>
                                <a href="@Url.Action("Summary", "Vote", new { id = request.IdMedicalHistory })" class="btn btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>








@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
